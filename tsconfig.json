{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "Node16",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "checkJs": true,
    "esModuleInterop": true
  },
  "include": ["src", "template", "tsup.config.ts", "prettier.config.mjs"]
}
